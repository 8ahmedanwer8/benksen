{
    "name": "Benksen",
    "description": "A tool to help you make your studying more productive and easier to manage!",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons":{
        "16": "./images/image_16.png",
        "32": "./images/image_32.png",
        "64": "./images/image_64.png",
        "128": "./images/image_128.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "action": {
        "default_popup": "./popup.html",
        "default_icons": {
            "16": "./images/image_16.png",
            "32": "./images/image_32.png",
            "48": "./images/image_48.png",
            "128": "./images/image_128.png"
        }
    },
    "options_page": "./options.html",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions":[
        "<all_urls>"
    ]
}